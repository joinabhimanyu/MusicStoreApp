<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>
                        <img src="~/Images/homelinkimg1.png" />
                    </p>
                    
                    <p class="site-title">@Html.ActionLink("My MVC APPLICATION", "Index", "Home", routeValues: null, htmlAttributes: new { @class="logo"})</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Music Store", "Index", "MusicStore")</li>
                            <li>@Html.ActionLink("Sports Store", "Index", "StoreManager")</li>
                            <li>@Html.ActionLink("Social", "Index", "Social")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.7.1.js")"></script>
        <script type="text/javascript">

            $(document).ready(function () {

                $(".float-left p img").addClass("app-logo");

            });

        </script>

    </body>
</html>
