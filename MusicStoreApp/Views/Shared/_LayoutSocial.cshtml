@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>_LayoutSocial</title>
     <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.customize.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-lightbox.min.css" />
    

</head>
<body data-spy="scroll" data-target=".modal .text-info">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="navbar navbar-inverse">
                    <div class="navbar-inner">
                        <a class="brand" href="#">Title</a>
                        <ul class="nav">
                            <li class="active"><a href="/Social/Index"><i class="icon-home icon-white"></i> Home</a></li>
                            <li><a href="/Social/Link1Content" id="link1"><i class="icon-music icon-white"></i> Link 1</a></li>
                            <li><a href="/Social/Link2Content" id="link2"><i class="icon-envelope icon-white"></i> Link 2</a></li>
                        </ul>
                        <form class="navbar-search">
                            <input type="text" placeholder="Search something" id="txtSearch" class="input-medium search-query" />
                        </form>
                        <ul class="nav inline pull-right">
                            <li>
                                <a href="#" id="app_pop" rel="popover" data-content="<div class='container-fluid'><div class='row-fluid'><div class='span4'><a href='#'><i class='icon-music'></i></a></div><div class='span4'><a href='#'><i class='icon-film'></i></a></div><div class='span4'><a href='#'><i class='icon-envelope'></i></a></div></div><div class='row-fluid'><div class='span4'><a href='#'><i class='icon-th-list'></i></a></div><div class='span4'><a href='#'><i class='icon-upload'></i></a></div><div class='span4'><a href='#'><i class='icon-camera'></i></a></div></div><div class='row-fluid'><div class='span4'><a href='#'><i class='icon-picture'></i></a></div><div class='span4'><a href='#'><i class='icon-list'></i></a></div><div class='span4'><a href='#'><i class='icon-map-marker'></i></a></div></div></div>" data-original-title="Apps" data-placement="bottom" data-trigger="click"><i class="icon-th icon-white"></i></a>
                            </li>
                            <li>
                                <a href="#" id="notify_pop" rel="popover" data-content="<div class='container-fluid'><div class='row-fluid'><div class='span2'></div><div class='span8'><img src='/../Images/google.png'/></div><div class='span2'></div></div><div class='row-fluid'><div class='span12'><p class='text-left'><h6>Please <a href='#'>sign in</a> to view your notifications.</h6></p></div></div></div>" data-placement="bottom" data-trigger="click"><i class="icon-bell icon-white"></i></a>
                            </li>
                            <li>
                                <a href="#" id="login_pop" rel="popover" data-content="<div class='container-fluid'><div class='row-fluid'><div class='span12'><form action='/Social/Login' method='post'><label>Username</label><input type='text' name='uname' placeholder='Enter username' class='input-medium' required/><label>Password</label><input type='password' name='password' placeholder='Enter password' class='input-medium' required/><label class='checkbox'><input type='checkbox'/>Remember me</label><button type='submit' class='btn'><i class='icon-thumbs-up'></i>Sign in</button></form></div></div></div>" data-original-title="Login Form" data-placement="bottom" data-trigger="click"><i class="icon-user icon-white"></i> Login</a>
                            </li>
                            <li>
                                <a href="#signup_modal" data-toggle="modal"><i class="icon-arrow-up icon-white"></i> Sign Up</a>
                            </li>
                        </ul>    
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            @RenderBody()
        </div>

                <div id="signup_modal" class="modal hide fade in" style="display:none;">
                            <div class="modal-header" style="background-color:#00BFFF;">
                                <a class="close" data-dismiss="modal">x</a>
                                <h4>User Registration</h4>
                            </div>
                            <div class="modal-body well">
                                <form class="form-horizontal" action="/Social/Register" method="post">
                                    <div class="control-group">
                                            <label class="control-label" for="frmUname"><strong>Username</strong></label>
                                        <div class="controls">
                                            <input type="text" id="frmUname" placeholder="Enter username" name="frmUname" class="input-medium" required />          
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="frmFName"><strong>First Name</strong></label>
                                        <div class="controls">
                                            <input type="text" placeholder="Enter first name" class="input-medium" name="frmFName" required />
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="frmLName"><strong>Last Name</strong></label>
                                        <div class="controls">
                                            <input type="text" placeholder="Enter last name" class="input-medium" name="frmLName" required />
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="frmPass"><strong>Password</strong></label>
                                        <div class="controls">
                                            <input type="password" placeholder="Enter password" class="input-medium" name="frmPass" required />
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="frmCPass"><strong>Confirm Password</strong></label>
                                        <div class="controls">
                                            <input type="password" placeholder="Confirm password" class="input-medium" name="frmCPass" required />
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <div class="row-fluid">
                                            <div class="span4">

                                            </div>
                                            <div class="span4">
                                                 <label class="radio inline">
                                                 <input type="radio" name="rdbSex" id="rdbMale" value="Male" /> <strong>Male</strong>
                                                 </label>
                                                 <label class="radio inline">
                                                 <input type="radio" name="rdbSex" id="rdbFemale" value="Female" /> <strong>Female</strong>
                                                 </label>
                                            </div>
                                            <div class="span4">

                                            </div>
                                        </div>              
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="frmEmail"><strong>email</strong></label>
                                        <div class="controls">
                                            <input type="email" placeholder="Enter email" class="input-medium" name="frmEmail" required />
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                         <button type="submit" class="btn btn-primary">Submit</button>
                                         <a href="#" class="btn" data-dismiss="modal">Cancel</a>
                                    </div>
                                </form>
                            </div>
                        </div>
    </div>


      <script type="text/javascript" src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.customize.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-lightbox.min.js" ></script>
    <script type="text/javascript" src="~/Scripts/knockout-2.1.0.js"></script>
    <script type="text/javascript" src="~/Scripts/knockout.samples.js"></script>
    <script type="text/javascript" src="~/Scripts/angular.js"></script>
    <script type="text/javascript" src="~/Scripts/angular.samples.js"></script>
    

    <script type="text/javascript">
        $(function () {
            $("#login_pop").popover();
            $("#notify_pop").popover();
            $("#app_pop").popover();
            $('.dropdown-toggle').dropdown();
        });

    </script>

</body>
</html>
